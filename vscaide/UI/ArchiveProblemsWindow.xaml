<Window x:Class="slycelote.VsCaide.UI.ArchiveProblemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select problems to archive" Height="300" Width="400" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" Name="lstProblems" SelectionMode="Extended" />
        <StackPanel Grid.Column="1">
            <CheckBox Content="Delete completely" Name="chkDelete" IsThreeState="False" HorizontalAlignment="Left" Margin="10,5" />
            <Button Content="Select All" Name="btnSelectAll" MinWidth="60" HorizontalAlignment="Left" Margin="10,5" />
            <Button Content="OK" Name="btnOk" MinWidth="60" HorizontalAlignment="Left" Margin="10,5" />
            <Button Content="Cancel" Name="btnCancel" MinWidth="60" HorizontalAlignment="Left" Margin="10,5" />
        </StackPanel>
    </Grid>
</Window>
